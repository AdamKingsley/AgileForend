/* pages/init_info/init_info.wxss */

/* 整体 */

page {
  width: 100%;
  height: auto;
}

.container {
  margin: 10rpx 40rpx;
  /* height: inherit; *//* background: inherit; */
  background: rgba(248, 69, 69, 0.5);
  border-radius: 10rpx;
}

.placeholder {
  color: rgb(247, 222, 222);
}

/* 头像 */

.container .avatar image {
  width: 140rpx;
  height: 140rpx;
  padding: 0rpx;
  margin: 25rpx auto 5rpx auto;
  align-items: center;
  border-radius: 50%;
  /* overflow: hidden; */
}

/* 姓名 */

.basicinfo .username input {
  margin: 0 20rpx 20rpx;
  text-align: center;
  color: whitesmoke;
}

.basicinfo .username input.focus {
  /* text-align: center; */
  border: 5rpx solid rgb(255, 120, 120);
  border-radius: 10rpx;
}

/* 基本信息 */

.basicinfo .weui-vcode-btn {
  background-color: #3cc51f;
  color: whitesmoke;
}

.basicinfo .weui-input {
  /* background: rgb(255,250,250); */
  border: 5rpx solid rgb(255, 200, 200);
  margin: 10rpx 0;
}

.weui-cell.weui-cell_input{
  padding-right:10rpx; 
}

.weui-vcode-btn {
  border-radius: 20rpx;
  font-size: 25rpx;
  margin-right: 10rpx;
}

.weui-cell__bd, .weui-cell__hd {
  font-size: 35rpx;
  color: whitesmoke;
  text-align: center;
}
/* .weui-cell__bd input.weui-input{
  margin-right: 10rpx;
} */
.weui-cell__hd .weui-label{
  width: 150rpx;
}
.weui-cell__bd{
    height: 113rpx;
    vertical-align: center;
}
.weui-cell__bd radio-group{
  margin: 28rpx 0 0 0;

}

.weui-cell__bd radio-group .radio{
  border: 5rpx solid rgb(255, 200, 200);
  border-radius: 10rpx;
  /* padding: 10rpx 10rpx 20rpx; */
  /* margin: 10rpx 20rpx 10rpx 0; */

}

.weui-cell__bd radio-group .radio{
  border: 5rpx solid rgb(255, 200, 200);
  border-radius: 10rpx;
  padding: 10rpx 10rpx;
  margin: 10rpx;
  /* margin: 10rpx 20rpx 10rpx 0; */
  /* vertical-align: center; */
}

.weui-cell__bd radio-group .radio text{
  display: inline-block;
  margin-bottom: 10rpx;
}
.wx-radio-input{
	display: none;
}
.ws-radio {
  display: inline-block;
  /* float: left; */
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  background-image: url('https://xjl.jindanke.cn/uploads/wx_img/checked-box.png');
  background-size: 100%;
}

.ws-radio[checked] {
  background-image: url('https://xjl.jindanke.cn/uploads/wx_img/checked-box-hover.png');
}

/* 确认按钮 */

.confirmBtn {
  position: fixed;
  display: block;
  margin: 0 auto;
  bottom: 3%;
  left: 5%;
  right: 5%;
}

.confirmBtn button {
  margin: 0;
  padding: 0;
  background-color: rgb(255, 120, 120);
  color: white;
}
