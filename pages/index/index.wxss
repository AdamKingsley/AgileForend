/**index.wxss**/

.container {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

.location {
  display: inherit;
  background: #EFEFF4;
}

.location image {
  float: left;
  padding: 10px 0px 10px 5px;
  height: 47px;
  width: 30px;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}

.location text {
  padding: 9px 0;
  float: left;
  /* border-radius: 3px; */
  text-align: center;
  color: #515151;
  line-height: 28px;
  font-size: 14px;
  font-weight: bold;
  background-color: #efeff4;
  /* border-top: 1rpx solid #d7d6dc; */
  border-bottom: 1rpx solid #d7d6dc;
}
