/* 确认按钮 */

.confirmBtn {
  position: fixed;
  display: block;
  margin: 0 auto;
  bottom: 3%;
  left: 5%;
  right: 5%;
}

.confirmBtn button {
  margin: 0;
  padding: 0;
  background-color: rgb(255, 120, 120);
  color: white;
}


.button-hover {
  background-color: rgba(0, 0, 255, 0.158);
}

.myInput{
  display: flex;
  position:relative;
  padding: 10px 15px;
  height:100px;
  width:305px;
  -webkit-box-align: top;
  -webkit-align-items: top;
          align-items: top;
}
.myInput:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  left: 15px;
}

