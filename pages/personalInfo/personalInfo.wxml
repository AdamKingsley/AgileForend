<!--pages/personalInfo/personalInfo.wxml-->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class='personal'>
    <view class='item'>
      <text class='left'>昵称：</text>
      <text class='right'>{{userinfo.nickname}}</text>
    </view>
    <view class='item'>
      <text class='left'>性别：</text>
      <text class='right' wx:if="{{userinfo.sex==1}}">男</text>
      <text class='right' wx:else if="{{userinfo.sex==2}}">女</text>
      <!-- <text class='right' wx:else>秘密</text> -->
    </view>
    <view class='item'>
      <text class='left'>位置：</text>
      <text class='right'>{{userinfo.province}}，{{userinfo.city}}</text>
    </view>
    <view class='item'>
      <text class='left'>学校：</text>
      <text class='right'>{{userinfo.school}}</text>
    </view>
  </view>

  <view class='section'>
    <view class='item'>
      <text>个人简介：</text>
    </view>
    <form bindsubmit="modifyIndividual">
      <textarea class='textarea' placeholder-class="place-holder" placeholder='{{userinfo.individual}}' auto-focus maxlength='300' bindinput='limit' bindblur='bindTextAreaBlur' maxlength='{{maxWord}}' value="{{userinfo.individual}}" style="font-size: 14px;"
      />
      <button class='button' form-type='submit' bindtap='modify'>提交</button>
    </form>

  </view>
</view>